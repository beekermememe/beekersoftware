<div id="articles">
<table class="table table-striped" border=1>
  <tr><th>ID</th><th>Title</th><th>Author</th><th>Created</th><th>Published</th><th>Action</th>
  <% @articles.each do |article| %>
  <tr id= <%= "article_#{article.id}"%> >
    <td> <%= "#{article.id}" %></td>
    <td> <%= "#{article.title}" %></td>
    <td> <%= "#{article.author}" %></td>
    <td> <%= "#{article.created_at}" %></td>
    <td> <%= "#{article.publish ? 'Yes' : 'No'}" %></td>
    <td><a class="delete_article" id=<%= "delete_article_#{article.id}" %>><span class="glyphicon glyphicon-trash"></span> Delete</a> / <a class="edit_article" id=<%= "edit_article_#{article.id}" %>><span class="glyphicon glyphicon-pencil"></span> Edit</a></td>
  <tr>
  <% end %>
</table>
</div>
<a class="new" href='/admin/new'><i class="icon-plus-sign"></i> Add New Article</a>