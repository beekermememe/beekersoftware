<div id="edit_article">
<h1>Edit</h1>
  <form action="/admin/update" method="post" role="form" class='form-horizontal'>
    <div class="form-group">
      <label class="col-sm-1 control-label">Title</label>
      <div class="col-sm-11">
        <input class="form-control" type="Title" id="title" name="title" value="<%= @article.title %>"></input>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-1 control-label">Author</label>
      <div class="col-sm-11">
        <input type="text" id="author" name="author" class="form-control" value="<%= @article.author %>"></input>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-1 control-label">Content</label>
      <div class="col-sm-11">
        <textarea id="content" name="content" class="form-control" rows="5"><%= @article.content %></textarea>
      </div>
    </div>
    <div class="form-group checkbox">
      <label class="col-sm-offset-1 control-label">
         <input type="checkbox" id="publish" name="publish" checked=<%=@article.publish == true ? "true" : "false"%> ></input>Publish To Web
       </label> 
      </div>
    </div>
    <input type="hidden" name="id" value=<%= @article.id %>></input>
    <button class="btn btn-primary" type="submit">Submit</button>
  </form>
</div>