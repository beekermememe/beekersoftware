<div id="add_article">
<h1>Add new entry</h1>
  <form action="/admin/create" method="post" role="form" class='form-horizontal'>
    <div class="form-group">
      <label class="col-sm-1 control-label">Title</label>
      <div class="col-sm-11">
        <input class="form-control" type="Title" id="title" name="title"></input>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-1 control-label">Author</label>
      <div class="col-sm-11">
        <input type="text" id="author" name="author" class="form-control"></input>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-1 control-label">Content</label>
      <div class="col-sm-11">
        <textarea id="content" name="content" class="form-control" rows="5"></textarea>
      </div>
    </div>
    <div class="form-group checkbox">
      <label class="col-sm-offset-1 control-label">
         <input type="checkbox" id="publish" name="publish"></input>Publish To Web
      </label> 
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
  </form>
</div>